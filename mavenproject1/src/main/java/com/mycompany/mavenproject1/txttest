import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.swing.event.*;

public class MyPanel extends JPanel {
    private JLabel jcomp1;
    private JLabel labelDisciplina;
    private JTextField entryDisciplina;
    private JLabel labelCorpoQuestao;
    private JTextField entryCorpoQuestao;
    private JButton buttonPesquisar;
    private JList tabelaQuestoes;
    private JLabel labelTV_ID;
    private JLabel labelTV_Disciplina;
    private JLabel labelTV_CorpoQuestao;
    private JLabel labelEntryIDQuestao;
    private JTextField entryIDQuestao;
    private JButton buttonDeletar;
    private JButton buttonVoltar;

    public MyPanel() {
        //construct preComponents
        String[] tabelaQuestoesItems = {"Item 1", "Item 2", "Item 3"};

        //construct components
        labeltabelaQuestoes = new JLabel ("TABELA DE QUESTÕES");
        labelDisciplina = new JLabel ("DISCIPLINA");
        entryDisciplina = new JTextField (5);
        labelCorpoQuestao = new JLabel ("CORPO DA QUESTÃO");
        entryCorpoQuestao = new JTextField (5);
        buttonPesquisar = new JButton ("PESQUISAR");
        tabelaQuestoes = new JList (tabelaQuestoesItems);
        labelTV_ID = new JLabel ("ID");
        labelTV_Disciplina = new JLabel ("DlSCIPLINA");
        labelTV_CorpoQuestao = new JLabel ("CORPO DA QUESTÃO");
        labelEntryIDQuestao = new JLabel ("ID DA QUESTÃO:");
        entryIDQuestao = new JTextField (5);
        buttonDeletar = new JButton ("DELETAR");
        buttonVoltar = new JButton ("VOLTAR");

        //set components properties
        buttonPesquisar.setToolTipText ("CLIQUE PARA PESQUISAR");
        buttonDeletar.setToolTipText ("CLIQUE PARA DELETAR");
        buttonVoltar.setToolTipText ("CLIQUE PARA VOLTAR À TELA PRINCIPAL");

        //adjust size and set layout
        setPreferredSize (new Dimension (754, 527));
        setLayout (null);

        //add components

        //treeview
        add (tabelaQuestoes);

        add (entryDisciplina);
        add (entryIDQuestao);
        add (entryCorpoQuestao);

        add (buttonPesquisar);
        add (buttonDeletar);
        add (buttonVoltar);

        add (labeltabelaQuestoes);
        add (labelDisciplina);
        add (labelCorpoQuestao);
        add (labelTV_ID);
        add (labelTV_Disciplina);
        add (labelTV_CorpoQuestao);
        add (labelEntryIDQuestao);

        //set component bounds (only needed by Absolute Positioning)


        tabelaQuestoes.setBounds (115, 240, 455, 165);

        entryDisciplina.setBounds (190, 85, 380, 30);
        entryIDQuestao.setBounds (215, 440, 200, 25);
        entryCorpoQuestao.setBounds (250, 130, 320, 60);

        buttonPesquisar.setBounds (605, 160, 110, 30);
        buttonDeletar.setBounds (470, 435, 100, 30);
        buttonVoltar.setBounds (605, 435, 100, 30);

        labeltabelaQuestoes.setBounds (275, 50, 140, 25);
        labelDisciplina.setBounds (115, 85, 75, 30);
        labelCorpoQuestao.setBounds (115, 130, 135, 25);
        labelTV_ID.setBounds (115, 215, 75, 25);
        labelTV_Disciplina.setBounds (195, 215, 100, 25);
        labelTV_CorpoQuestao.setBounds (290, 215, 220, 25);
        labelEntryIDQuestao.setBounds (115, 440, 100, 25);
    }


    public static void main (String[] args) {
        JFrame frame = new JFrame ("MyPanel");
        frame.setDefaultCloseOperation (JFrame.EXIT_ON_CLOSE);
        frame.getContentPane().add (new MyPanel());
        frame.pack();
        frame.setVisible (true);
    }
}